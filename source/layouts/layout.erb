    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Cycling &amp; Walking Journey Planner</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale = 1">
        <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
        <%= stylesheet_link_tag :main %>
        <%= stylesheet_link_tag :print, media: :print %>

        <!-- build:js scripts/vendor/modernizr.js -->
        <%= javascript_include_tag "vendor/modernizr" %>
        <!-- endbuild -->
    </head>
    <body>

      <div class="header_top">
        <%= partial "layouts/nav_block" %>
        <% link_to "/", title: "Home" do %>
          <%= image_tag 'header/journeyplanner_logo_print.png', class: "product_logo", alt: "Walking &amp; Cycling Journey Planner" %>
        <% end %>
        <% link_to 'http://www.springtothestreet.org.nz/', target: '_blank' do %>
          <%= image_tag 'banners/a2b_GO_JP_Banner_2015.jpg', class: 'banner_image' %>
        <% end %>
        <% link_to "http://www.gw.govt.nz", target: "_blank" do %>
          <%= image_tag "header/gwrc_logo.png", class: "council_logo" %>
        <% end %>
      </div>
      <div class="header_bottom">
         <%= yield_content :header_bar %>

         <div class="clear">
            <!-- / -->
        </div>
        <div id="global_loading_indicator">
          <i class="icon-spinner icon-spin icon-large"></i> <strong>Loading</strong>
        </div>

      </div>
      <div class='clear'></div>
      <div class="container-fluid" id='body-content'>
        <%= yield %>
      </div>

        <script type='text/javascript' src='http://www.addressfinder.co.nz/assets/v2/widget.js'></script>
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?libraries=geometry,weather&sensor=false"></script>
        <!--<script src="js/plugins.js"></script>-->
